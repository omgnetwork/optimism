{
  "name": "@enyalabs/integration-tests",
  "version": "0.0.1",
  "description": "Integration Tests",
  "private": true,
  "author": "Optimism PBC",
  "license": "MIT",
  "files": [
    "test/**/*.ts"
  ],
  "scripts": {
    "lint": "yarn lint:fix && yarn lint:check",
    "lint:check": "tslint --format stylish --project .",
    "lint:fix": "prettier --config ./prettier-config.json --write 'test/**/*.ts'",
    "build": "yarn build:contracts && yarn build:contracts:ovm && yarn build:typescript && yarn build:copy && yarn build:dump && yarn build:typechain",
    "build:typescript": "tsc",
    "build:dump": "ts-node \"bin/take-dump.ts\"",
    "build:copy": "yarn build:copy:artifacts && yarn build:copy:artifacts:ovm && yarn build:copy:contracts",
    "build:integration": "./scripts/build.sh",
    "build:contracts": "hardhat compile",
    "build:contracts:ovm": "hardhat compile --network omgx",
    "deploy": "hardhat --network omgx test",
    "clean": "rimraf cache artifacts artifacts-ovm cache-ovm"
  },
  "devDependencies": {
    "@eth-optimism/hardhat-ovm": "^0.0.2",
    "@ethersproject/providers": "^5.0.24",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@types/jest": "^26.0.22",
    "@types/mocha": "^8.2.2",
    "chai": "^4.3.3",
    "chai-as-promised": "^7.1.1",
    "enyalabs_core-utils": "git+https://github.com/enyalabs/core-utils.git",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.0.32",
    "hardhat": "^2.1.2",
    "mocha": "^8.3.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "directory-tree": "^2.2.7"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "enyalabs_contracts": "git+ssh://git@github.com:enyalabs/contracts.git#rinkeby",
    "glob": "^7.1.6"
  }
}
